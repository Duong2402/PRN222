@using OnlineMusicProject.Models
@model Songs
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->
    <title>Online Music</title>

    <!-- Favicon -->
    <link rel="icon" href="/img/core-img/favicon.ico">

    <!-- Stylesheet -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/SongsOnline/songdetail.css">

    <style>
        .fixed-size-img {
            width: 120px; 
            height: 120px;
            object-fit: cover; 
        }

        .related-song-img {
            width: 60px; 
            height: 60px; 
            object-fit: cover; 
        }

    </style>
</head>

<body>

    <section class="breadcumb-area bg-img bg-overlay" style="background-image: url(/img/bg-img/breadcumb3.jpg);">
        <div class="bradcumbContent">
            <p>@Model.NameSong</p>
            <h2>@Model.Artists.ArtistName</h2>
        </div>
    </section>

    <div class="one-music-songs-area mb-70" style="margin-top: 40px">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <div class="single-song-area mb-30 d-flex flex-wrap align-items-center justify-content-center">
                        <div class="song-thumbnail">
                            <img src="@Model.ImageSong" alt="@Model.NameSong" class="large-song-img">
                        </div>
                        <div class="song-play-area text-center w-100">
                            <div class="song-name">
                                <p>@Model.NameSong</p>
                            </div>
                            <audio controls>
                                <source src="@Model.FilePath" type="audio/mpeg">
                            </audio>
                            <div class="button-group">
                                <button class="playlist-btn" onclick="addToPlaylist('@Model.SongId')">
                                    <span class="icon">❤️</span> Add to playlist
                                </button>
                                <a href="@Model.FilePath" download class="download-btn">
                                    <span class="icon">⬇</span> Download
                                </a>
                            </div>
                        </div>
                        
                    </div>
                </div>

            </div>
        </div>
    </div>

    
    <!-- jQuery-2.2.4 js -->
    <script src="/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="/js/bootstrap/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="/js/bootstrap/bootstrap.min.js"></script>
    @* <!-- All Plugins js --> *@
    @* <script src="/js/plugins/plugins.js"></script> *@
    <!-- Active js -->
    <script src="/js/active.js"></script>
</body>

</html>