@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<OnlineMusicProject.Models.Songs>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- The above 4 meta tags must come first in the head; any other head content must come after these tags -->
	<!-- Title -->
	<title>Online Music</title>

	<!-- Favicon -->
	<link rel="icon" href="/img/core-img/favicon.ico">
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<!-- Stylesheet -->
	<link rel="stylesheet" href="/css/style.css">
	<style>
		.single-album {
			width: 160px;
			height: 250px
		}

			.single-album img {
				width: 100%;
				height: 160px;
			}

		.album-info {
			text-align: center;
			padding: 10px;
		}

		button:focus {
			outline: none;
			border: none;
		}

	</style>
</head>

<body>

	<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(/img/bg-img/breadcumb3.jpg);">
		<div class="bradcumbContent">
			<p>See what’s new</p>
			<h2>Latest Albums</h2>
		</div>
	</section>
	<!-- ##### Breadcumb Area End ##### -->
	<!-- ##### Album Catagory Area Start ##### -->
	<section class="album-catagory section-padding-100-0">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="browse-by-catagories catagory-menu d-flex flex-wrap align-items-center mb-70">
						<a href="#" data-filter="*">Browse All</a>
						<a href="#" data-filter=".a" class="active">A</a>
						<a href="#" data-filter=".b">B</a>
						<a href="#" data-filter=".c">C</a>
						<a href="#" data-filter=".d">D</a>
						<a href="#" data-filter=".e">E</a>
						<a href="#" data-filter=".f">F</a>
						<a href="#" data-filter=".g">G</a>
						<a href="#" data-filter=".h">H</a>
						<a href="#" data-filter=".i">I</a>
						<a href="#" data-filter=".j">J</a>
						<a href="#" data-filter=".k">K</a>
						<a href="#" data-filter=".l">L</a>
						<a href="#" data-filter=".m">M</a>
						<a href="#" data-filter=".n">N</a>
						<a href="#" data-filter=".o">O</a>
						<a href="#" data-filter=".p">P</a>
						<a href="#" data-filter=".q">Q</a>
						<a href="#" data-filter=".r">R</a>
						<a href="#" data-filter=".s">S</a>
						<a href="#" data-filter=".t">T</a>
						<a href="#" data-filter=".u">U</a>
						<a href="#" data-filter=".v">V</a>
						<a href="#" data-filter=".w">W</a>
						<a href="#" data-filter=".x">X</a>
						<a href="#" data-filter=".y">Y</a>
						<a href="#" data-filter=".z">Z</a>
						<a href="#" data-filter=".number">0-9</a>
					</div>
				</div>
			</div>

			<div class="row oneMusic-albums">
				<div class="row">
					@foreach (var song in Model)
					{
						var firstLetter = song.NameSong.Substring(0, 1).ToLower();
						var cssClass = char.IsDigit(firstLetter[0]) ? "number" : firstLetter;

						<div class="col-12 col-sm-4 col-md-3 col-lg-2 single-album-item @cssClass">
							<div class="single-album">
								<form asp-controller="Users" asp-action="HistoryOfListening" method="post">
									<input type="hidden" name="songId" value="@song.SongId" />
									<button type="submit" style="background: transparent; border: none; outline: none;">
										<img src="@song.ImageSong" alt="@song.NameSong">
										<div class="album-info">
											<a href="#">
												<h5>@song.NameSong</h5>
											</a>
											<p>@song.Artists.ArtistName</p>
										</div>
									</button>
								</form>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</section>
	
	<div class="oneMusic-buy-now-area mb-100">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="load-more-btn text-center" id="loadMoreContainer">
						<a href="javascript:void(0);" id="loadMoreBtn" class="btn oneMusic-btn">Load More <i class="fa fa-angle-double-right"></i></a>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="one-music-songs-area mb-70">
		<div class="container">
			<div class="row">
				@foreach (var song in Model)
				{
					<div class="col-12">
						<div class="single-song-area mb-30 d-flex flex-wrap align-items-end">
							<div class="song-thumbnail">
								<img src="@song.ImageSong" alt="@song.NameSong" style="width: 200px;height: 120px">
							</div>
							<div class="song-play-area">
								<div class="song-name">
									<p>@song.NameSong</p>
								</div>
								<audio preload="auto" controls>
									<source src="@song.FilePath">
								</audio>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
	<!-- jQuery-2.2.4 js -->
	<script src="/js/jquery/jquery-2.2.4.min.js"></script>
	<!-- Popper js -->
	<script src="/js/bootstrap/popper.min.js"></script>
	<!-- Bootstrap js -->
	<script src="/js/bootstrap/bootstrap.min.js"></script>
	@* <!-- All Plugins js --> *@
	@* <script src="/js/plugins/plugins.js"></script> *@
	<!-- Active js -->
	<script src="/js/active.js"></script>
</body>
