@model OnlineMusicProject.ViewModels.AdminPage.CreatePlaylistViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Playlist";
}

<div class="container mt-5" style="margin-top: 100px; padding-top: 20px;">
    <h1>Create New Playlist</h1>
    <form asp-action="CreatePlaylist" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="PlaylistName" class="form-label"></label>
            <input asp-for="PlaylistName" class="form-control" placeholder="Enter playlist name" />
            <span asp-validation-for="PlaylistName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="UserId" class="form-label">User</label>
            <select asp-for="UserId" class="form-control" asp-items="@(new SelectList(ViewBag.Users, "Id", "FullName"))">
                <option value="">Select a user</option>
            </select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PlaylistImage" class="form-label"></label>
            <input asp-for="PlaylistImage" class="form-control" accept="image/*" />
            <span asp-validation-for="PlaylistImage" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Create Playlist" class="btn btn-primary px-4" />
            <a asp-action="ManagePlaylists" class="btn btn-secondary px-4">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}