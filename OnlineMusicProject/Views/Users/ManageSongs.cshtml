@model IEnumerable<OnlineMusicProject.Models.Songs>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Songs";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->
    <title>Online Music</title>

    <!-- Favicon -->
    <link rel="icon" href="/img/core-img/favicon.ico">

    <!-- Stylesheet -->
    <link rel="stylesheet" href="/css/style.css">

</head>

<body>
<div class="container mt-5" style="margin-top: 100px; padding-top: 20px;">
    <h1>Manage Songs</h1>
    <a asp-action="CreateSong" class="btn btn-success mb-3">Add New Song</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Artist</th>
                <th>Genre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var song in Model)
            {
                <tr>
                    <td>@song.SongId</td>
                    <td>@song.NameSong</td> 
                    <td>@song.Artists?.ArtistName</td>
                    <td>@song.songGenres?.Name</td>
                    <td>
                        <a asp-action="EditSong" asp-route-id="@song.SongId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="DeleteSong" asp-route-id="@song.SongId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</body>

</html>